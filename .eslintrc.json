{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-console": "warn",
    "linebreak-style": [
      "warn",
      "unix"
    ],
    "max-len": [
      2,
      120
    ],
    "dot-notation": "off",
    "@typescript-eslint/dot-notation": "warn",
    "@typescript-eslint/no-unused-vars": 2,
    "max-params": [
      2,
      3
    ],
    "import/prefer-default-export": [
      "off"
    ],
    "arrow-body-style": [
      "off"
    ],
    "semi": [
      "warn",
      "always"
    ]
  }
}
